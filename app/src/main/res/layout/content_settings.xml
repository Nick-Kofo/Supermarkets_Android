<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrow_tint="@color/white"
        app:ms_background_color="@color/colorPrimary"
        app:ms_text_color="@color/white" />

    <Button
        android:id="@+id/btContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_contact_action"
        android:text="@string/contact"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_about_action"
        android:text="@string/about"
        android:textColor="@color/white" />


</LinearLayout>